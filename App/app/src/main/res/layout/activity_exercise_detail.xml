<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Back"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exercise Details"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- WebView (fixed height) -->
    <WebView
        android:id="@+id/webViewYoutube"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Basic Info -->
            <TextView
                android:id="@+id/tvExerciseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Dumbbell Curl"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvExerciseId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID: curl_db"
                android:textColor="#B0B0B0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvFocusArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Focus: Upper Body"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvIntensity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intensity: 3"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDifficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Difficulty: 2"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calories/min: 7.5"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvEquipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requires Equipment: No"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvIsDynamic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dynamic: true"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCameraAngle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera Side: Front"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- Optional Tags -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Muscle Groups:"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMuscleGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="chest: 0.4, shoulders: 0.3, triceps: 0.3"
                android:textColor="#E0E0E0"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Common Issues:"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIssues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Back arching\n- Elbows moving too far forward"
                android:textColor="#E0E0E0"
                android:textSize="14sp" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Description:"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This exercise targets your biceps and helps build arm strength."
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Duration:"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <!-- Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartExercise"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Start Exercise"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:backgroundTint="#FFC107" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
