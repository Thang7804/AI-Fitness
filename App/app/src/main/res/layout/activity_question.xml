<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Câu hỏi 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1E1E1E">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is your main fitness goal?"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textAlignment="center" />
            </androidx.cardview.widget.CardView>

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <RadioButton
                    android:id="@+id/rb1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lose weight"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:buttonTint="#FF9800" />

                <RadioButton
                    android:id="@+id/rb1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gain muscle"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:buttonTint="#FF9800"
                    android:layout_marginTop="8dp" />

                <RadioButton
                    android:id="@+id/rb1_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Improve endurance"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:buttonTint="#FF9800"
                    android:layout_marginTop="8dp" />

                <RadioButton
                    android:id="@+id/rb1_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stay healthy"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:buttonTint="#FF9800"
                    android:layout_marginTop="8dp" />
            </RadioGroup>

            <!-- Câu hỏi 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 2"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1E1E1E">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="How much time can you spend per workout session?"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <RadioButton
                    android:id="@+id/rb2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FF9800"
                    android:text="15 minutes"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb2_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:buttonTint="#FF9800"
                    android:text="30 minutes"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb2_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:buttonTint="#FF9800"
                    android:text="45 minutes"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb2_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:buttonTint="#FF9800"
                    android:text="60 minutes"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Câu hỏi 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 3"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1E1E1E">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Which area do you want to focus on?"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <RadioButton
                    android:id="@+id/rb3_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FF9800"
                    android:text="Full Body"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb3_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:buttonTint="#FF9800"
                    android:text="Upper body (arms & chest)"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb3_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:buttonTint="#FF9800"
                    android:text=" Lower body (legs & glutes)"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb3_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:buttonTint="#FF9800"
                    android:text="Core (abs & waist)"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Câu hỏi 4 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 4"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1E1E1E">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What's your current level?"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textAlignment="center" />
            </androidx.cardview.widget.CardView>

            <RadioGroup
                android:id="@+id/radioGroup4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <RadioButton
                    android:id="@+id/rb4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FF9800"
                    android:text="Beginner (never trained)"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb4_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:buttonTint="#FF9800"
                    android:text="Intermediate (1–6 months)"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb4_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:buttonTint="#FF9800"
                    android:text="Advanced (6+ months)"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

            </RadioGroup>

            <!-- Câu hỏi 5 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 5"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1E1E1E">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Do you have equipment?"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textAlignment="center" />
            </androidx.cardview.widget.CardView>

            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <RadioButton
                    android:id="@+id/rb5_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FF9800"
                    android:text="No"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb5_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:buttonTint="#FF9800"
                    android:text="Yes"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

            </RadioGroup>

            <!-- Nút Submit -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:text="Submit Answers"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#FF9800"
                app:cornerRadius="30dp" />

        </LinearLayout>
    </ScrollView>

